{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "16.1.0",

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "node16",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "rootDir": "lib",
    "outDir": "dist",
  },
  "include": ["lib/index.ts", "lib/**/*.test.ts"],
  "ts-node": { "esm": true, "files": true }
}